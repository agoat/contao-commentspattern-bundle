{
    "name": "agoat/contao-commentspattern",
    "type": "contao-bundle",
    "description": "Contao Contentblocks Comments Pattern",
    "license": "LGPL-3.0+",
    "authors": [
        {
            "name": "Arne Stappen",
            "homepage": "https://github.com/agoat"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "symfony/framework-bundle": "~2.8|~3.0",
        "contao/core-bundle": "^4.2",
        "contao/comments-bundle": "^4.2",
        "agoat/contao-contentblocks": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5"
    },
    "autoload": {
        "psr-4": {
            "Agoat\\CommentsPatternBundle\\": "src/"
        },
        "classmap": [
            "src/Resources/contao"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config",
            "src/Resources/contao/dca",
            "src/Resources/contao/languages",
            "src/Resources/contao/templates"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Agoat\\CommentsPatternBundle\\Test\\": "tests/"
        }
    }
}
